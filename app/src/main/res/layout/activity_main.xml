<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/bg">

    <TextView

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kibrit Çekme Oyunu"
        android:id="@+id/textView"
        android:layout_marginTop="55dp"
        android:layout_gravity="center"
        android:textSize="35sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Oyuncu Sayısı"
        android:id="@+id/textView2"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2 Oyuncu"
        android:id="@+id/pCount"
        android:layout_gravity="center"
        android:layout_alignBottom="@+id/leftBtn"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/leftBtn"
        android:background="@drawable/arrow_left"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:maxWidth="50dp"
        android:minWidth="20dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/rightBtn"
        android:background="@drawable/arrow_right"
        android:layout_alignBottom="@+id/pCount"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Başla"
        android:id="@+id/startBtn"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/exitBtn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/flat_button"
        android:textColor="#fff"
        android:elegantTextHeight="true"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Çıkış"
        android:id="@+id/exitBtn"
        android:background="@drawable/flat_red_button"
        android:layout_alignParentBottom="true"
        android:textColor="#fff"
        android:layout_alignLeft="@+id/startBtn"
        android:layout_alignStart="@+id/startBtn"
        android:textSize="20sp" />

</RelativeLayout>
